# Object Oriented Programming in Python

class Car:
    def __init__(self, make, model,trim, year):
        self.make = make
        self.model = model
        self.trim = trim
        self.year = year
        

car = Car("Toyota","Corolla","SE",2020)
car2 =Car("Volvo","XC60","T6 AWD","2015")

print("Your car is a {} {} {} {}.".format(
    car.year, car.make, car.model, car.trim))

print("Your car is a {} {} {} {}.".format(
    car2.year, car2.make, car2.model, car2.trim))

class Motorcycle:
    def __init__(self, make, model,year):
        self.make = make
        self.model = model
        self.year = year
        
makem = input("Please enter the motorcycle make: ")
modelm = input("Please enter the motorcycle model: ")
yearm = input("Please enter the model year of the motorcycle: ")

motorcycle = Motorcycle(makem,modelm,yearm)

print("Your motorcycle is a {} {} {}.".format(
    motorcycle.year, motorcycle.make, motorcycle.model))

